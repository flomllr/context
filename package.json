{
  "name": "contextmenu",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "build --dir",
    "dist": "build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "applescript": "^1.0.0",
    "electron": "^6.0.10",
    "lowdb": "^1.0.0",
    "run-applescript": "^3.2.0",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "electron-builder": "^21.2.0"
  },
  "build": {
    "appId": "contextmenu",
    "category": "productivity",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  }
}
